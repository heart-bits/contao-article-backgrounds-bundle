{
  "name": "heart-bits/contao-article-backgrounds-bundle",
  "description": "Article backgrounds/Helper extension for Contao Open Source CMS",
  "keywords": [
    "contao",
    "article",
    "backgrounds",
    "artikel",
    "hintergrund"
  ],
  "type": "contao-bundle",
  "license": "LGPL-3.0+",
  "authors": [
    {
      "name": "heart-bits",
      "homepage": "https://heart-bits.com",
      "role": "Developer"
    }
  ],
  "support": {
    "email": "hi@heart-bits.com",
    "issues": "https://github.com/heart-bits/contao-article-backgrounds-bundle/issues",
    "source": "https://github.com/heart-bits/contao-article-backgrounds-bundle"
  },
  "require": {
    "php": "^8.3",
    "contao/core-bundle": "^5.0",
    "symfony/config": "^6.4 || ^7.0",
    "symfony/dependency-injection": "^6.4 || ^7.0",
    "symfony/http-foundation": "^6.4 || ^7.0",
    "symfony/http-kernel": "^6.4 || ^7.0"
  },
  "require-dev": {
    "contao/manager-plugin": "^2.0",
    "terminal42/contao-build-tools": "dev-main"
  },
  "autoload": {
    "psr-4": {
      "Heartbits\\ContaoArticleBackgrounds\\": "src/"
    },
    "classmap": [
      "src/Resources/contao/"
    ],
    "exclude-from-classmap": [
      "src/Resources/contao/config/",
      "src/Resources/contao/dca/",
      "src/Resources/contao/languages/",
      "src/Resources/contao/templates/"
    ]
  },
  "extra": {
    "contao-manager-plugin": "Heartbits\\ContaoArticleBackgrounds\\ContaoManager\\Plugin"
  },
  "config": {
    "allow-plugins": {
      "contao-components/installer": true,
      "php-http/discovery": true,
      "contao/manager-plugin": true,
      "terminal42/contao-build-tools": true
    }
  }
}
